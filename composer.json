{
    "name": "aabri-ankorstore/php-cli",
    "type": "project",
    "description": "CLI Tool",
    "authors": [
        {
            "name": "Amine AB",
            "email": "amine.abri@ankorstore.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "symfony/console": "^6.1",
        "symfony/dependency-injection": "^6.1",
        "symfony/filesystem": "^6.1",
        "symfony/finder": "^6.1",
        "symfony/process": "^6.1",
        "symfony/config": "^6.1",
        "herrera-io/phar-update": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Ankor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ankor\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "csfixer": "./vendor/bin/php-cs-fixer fix src"
    }
}
